@model elibrary.Models.Wydawnictwo

@{
    ViewData["Title"] = "Szczegóły wydawnictwa";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Szczegóły wydawnictwa</h1>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <img id="ProfilePicturePreview" class="img-thumbnail uniform-size" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="WydPictureURL" class="control-label">Zdjęcie wydawnictwa</label>
                    <input asp-for="WydPictureURL" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NameWyd" class="control-label">Nazwa wydawnictwa</label>
                    <input asp-for="NameWyd" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DescWyd" class="control-label">Opis wydawnictwa</label>
                    <textarea asp-for="DescWyd" class="form-control" rows="5" readonly></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-secondary" asp-action="Index">Powrót</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var profilePictureURL = $("#WydPictureURL").val();
            if (profilePictureURL) {
                output.src = profilePictureURL;
            }
        });

        $("#WydPictureURL").on("input", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
    </script>
}

<style>
    .uniform-size {
        width: 300px;
        height: 300px;
        object-fit: contain;
    }
</style>