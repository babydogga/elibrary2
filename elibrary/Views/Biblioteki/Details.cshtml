@model elibrary.Models.Biblioteka

@{
    ViewData["Title"] = "Szczegóły biblioteki";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
            <h1>Szczegóły biblioteki</h1>
            </p>
            <div class="row">
                <div class="col-md offset-2">
                    <div class="form-group mb-3">
                    <label asp-for="LogoBib" class="conrol-label"></label>
                    <input asp-for="LogoBib" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                    <label asp-for="NameBib" class="conrol-label"></label>
                    <input asp-for="NameBib" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                    <label asp-for="DescBib" class="conrol-label"></label>
                    <input asp-for="DescBib" class="form-control" readonly />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">Anuluj</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var profilePictureURL = $("#ProfilePictureURL").val(); // Pobranie wartości poprawnie
            if (profilePictureURL) {
                output.src = profilePictureURL;
            }
        });

        $("#ProfilePictureURL").on("input", function () { // Użycie "input" zamiast "change" dla lepszej reakcji
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
    </script>
}


