@model elibrary.Models.Wydawnictwo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Wydawnictwo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="WydPictureURL" class="control-label"></label>
                <input asp-for="WydPictureURL" class="form-control" />
                <span asp-validation-for="WydPictureURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameWyd" class="control-label"></label>
                <input asp-for="NameWyd" class="form-control" />
                <span asp-validation-for="NameWyd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescWyd" class="control-label"></label>
                <input asp-for="DescWyd" class="form-control" />
                <span asp-validation-for="DescWyd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var profilePictureURL = $("#WydPictureURL").val(); // Pobranie wartości poprawnie
            if (profilePictureURL) {
                output.src = profilePictureURL;
            }
        });

        $("#WydPictureURL").on("input", function () { // Użycie "input" zamiast "change" dla lepszej reakcji
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
    </script>
}
