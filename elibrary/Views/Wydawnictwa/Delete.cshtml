@model Wydawnictwo

@{
    ViewData["Title"] = "Usuń wydawnictwo";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-action="Delete" method="post" autocomplete="off">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1>Usuń wydawnictwo</h1>
            </p>
            <div class="row">
                <div class="col-md offset-2">
                    <div class="form-group mb-3">
                        <label asp-for="WydPictureURL" class="control-label"></label>
                        <input asp-for="WydPictureURL" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="NameWyd" class="control-label"></label>
                        <input asp-for="NameWyd" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DescWyd" class="control-label"></label>
                        <input asp-for="DescWyd" class="form-control" readonly />
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-outline-secondary" asp-action="Index">Anuluj</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
